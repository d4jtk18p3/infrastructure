apiVersion: apps/v1
kind: StatefulSet
metadata:
  name: registry
  namespace: proyek3
spec:
  selector:
    matchLabels:
      app: registry
  serviceName: registry
  replicas: 1
  template:
    metadata:
      labels:
        app: registry
    spec:
      containers:
      - name: registry
        image: registry:latest
        imagePullPolicy: IfNotPresent
        ports:
        - containerPort: 5000
        volumeMounts:
        - name: data
          mountPath: /var/lib/registry
        - name: auth
          mountPath: /auth
          readOnly: true
        - name: certs
          mountPath: /certs
          readOnly: true
        env:
          - name: REGISTRY_AUTH
            value: htpasswd
          - name: REGISTRY_AUTH_HTPASSWD_REALM
            value: 'Registry Realm'
          - name: REGISTRY_AUTH_HTPASSWD_PATH
            value: /auth/htpasswd
          - name: REGISTRY_HTTP_TLS_CERTIFICATE
            value: /certs/domain.crt
          - name: REGISTRY_HTTP_TLS_KEY
            value: /certs/domain.key
          - name: REGISTRY_COMPATIBILITY_SCHEMA1_ENABLED
            value: 'true'
      volumes:
      - name: auth
        secret:
          secretName: registry-auth.secret
      - name: certs
        secret:
          secretName: registry-certs.secret
  volumeClaimTemplates:
  - metadata:
      name: data
    spec:
      accessModes:
      - ReadWriteOnce
      resources:
        requests:
          storage: 2Gi
