---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: {{ service_frontend_name }}
  namespace: {{ service_namespace }}
spec:
  selector:
    matchLabels:
      app: {{ service_frontend_name }}
  replicas: 1
  template:
    metadata:
      labels:
        app: {{ service_frontend_name }}
    spec:
      containers:
      - name: {{ service_frontend_name }}
        image: {{ service_container_registry }}/{{ service_frontend_name }}:{{ service_frontend_gitresult.after }}
        imagePullPolicy: IfNotPresent
        ports:
        - containerPort: 80
---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: {{ service_monitoring_name }}
  namespace: {{ service_namespace }}
spec:
  selector:
    matchLabels:
      app: {{ service_monitoring_name }}
  replicas: 1
  template:
    metadata:
      labels:
      app: {{ service_monitoring_name }}
    spec:
      containers:
      - name: {{ service_monitoring_name }}
        image: {{ service_container_registry }}/{{ service_monitoring_name }}:{{ service_monitoring_gitresult.after }}
