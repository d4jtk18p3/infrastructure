        - name: DATABASE_DATABASE
          value: proyek3
        - name: DATABASE_PASSWORD
          value: '7P7pNZ6*xTfm8&z^'
        - name: DEV_KEYCLOAK_CLIENTID
          value: nodejs-microservice
        - name: DEV_KEYCLOAK_AUTH_URL
          value: https://keycloak.ca9db134.nip.io/auth/
        - name: DEV_KEYCLOAK_REALM
          value: Polban-Realm
        - name: NODE_ENV
          value: production
        ports:
        - containerPort: 5001