apiVersion: apps/v1
kind: Deployment
metadata:
  name: redis
  namespace: production
spec:
  selector:
    matchLabels:
      app: redis
  replicas: 1
  template:
    metadata:
      labels:
        app: redis
    spec:
      containers:
      - name: redis
        image: redis:6-alpine
        imagePullPolicy: IfNotPresent
        ports:
        - containerPort: 6379
